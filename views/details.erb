

<div class="container">
	
	<div class="row"> <!-- 1 -->
		
		<div class="col-md-7">
			<h1 class="sectionheader">
				<%= @id["Title"] %>
			</h1>
			<h2>
				Release Date: <%= @id["Released"] %> <br>
				Director: <%= @id["Director"] %> <br>
				MPAA Rating: <%= @id["Rated"] %> <br>
			</h2>
			<h3>
				Runtime: <%= @id["Runtime"] %> <br>
				Genre: <%= @id["Genre"] %> <br>
			</h3>
			<h4>
				Starring:<br><%= @id["Actors"] %>
			</h4>
			<h4>
				Plot Synopsis:
			</h4>
			<p>
				<%= @id["Plot"] %>
			</p>
			<p> <!-- imdb site link -->
				<a href="http://www.imdb.com/title/<%= @id["imdbID"] %>">Click here to visit on imdb.com!</a>
			</p>
		</div> <!-- end col-lg-7 -->

		<div class="col-md-5">
			<img src=<%=@id["Poster"]%> class="poster img-responsive"></img>
		</div> <!-- end col-lg-5 -->

	</div> <!-- end row1 -->

  <div class="row"> <!-- 2 -->

		<div class="col-xs-6">
			<img src="http://www.userlogos.org/files/logos/jumpordie/rottentomatoes_03.png" class="img-responsive"></img>
		</div> <!-- end of col-lg-6 -->

		<div class="col-xs-6">
			<h2>
				Score:<br><%= @id["tomatoMeter"] %>
			</h2>
			<br>
			<h2>
				Review:
			</h2>
			<p>
				<%= @id["tomatoConsensus"] %>
			</p>
		</div> <!-- end col-lg-6 -->
	
	</div> <!-- end row2 -->

	<div class="row">
		<a href="/">New Search</a>
	</div>

</div> <!-- end of container -->
