

<div class="container">
	
	<div class="row"> <!-- 1 -->
		
		<div class="col-lg-7">
			<h1 class="sectionheader title">
				<%= @id["Title"] %>
			</h1>
			<h2>
				Release Date: <%= @id["Released"] %> <br>
				Director: <%= @id["Director"] %> <br>
				MPAA Rating: <%= @id["Rated"] %> <br>
			</h2>
			<h3>
				Runtime: <%= @id["Runtime"] %> <br>
				Genre: <%= @id["Genre"] %> <br>
			</h3>
			<h4>
				Starring:<br><%= @id["Actors"] %>
			</h4>
			<p>
				Plot Synopsis:<br><%= @id["Plot"] %>
			</p>
			<p> <!-- imdb site link -->
				<a href="http://www.imdb.com/title/<%= @id["imdbID"] %>">Click here to visit on imdb.com!</a>
			</p>
